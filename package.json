{
  "name": "nest-http",
  "version": "0.0.1",
  "description": "",
  "author": "Innei <https://innei.ren>",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.8.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ]
  },
  "scripts": {
    "prepare": "corepack enable && husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "npm run start",
    "bundle": "rimraf out && pnpm run build && cd dist/src && npx ncc build main.js -o ../../out -m",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start -w",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node out/index.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prod": "cross-env NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "cross-env NODE_ENV=production nest start --debug --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage"
  },
  "dependencies": {
    "@nestjs/cache-manager": "2.1.0",
    "@nestjs/common": "10.2.6",
    "@nestjs/core": "10.2.6",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/passport": "10.0.2",
    "@nestjs/platform-fastify": "10.2.6",
    "@nestjs/schedule": "3.0.4",
    "@typegoose/auto-increment": "3.5.0",
    "@typegoose/typegoose": "11.5.0",
    "axios": "1.5.1",
    "bcrypt": "5.1.1",
    "cache-manager": "5.2.3",
    "cache-manager-ioredis": "2.1.0",
    "chalk": "^5.3.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "consola": "*",
    "cron": "^2.4.4",
    "dayjs": "1.11.10",
    "lodash": "*",
    "mongoose": "7.5.3",
    "mongoose-paginate-v2": "1.7.31",
    "nanoid": "3.3.6",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "redis": "4.6.10",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "snakecase-keys": "5.4.7",
    "zx-cjs": "7.0.7-0"
  },
  "devDependencies": {
    "@innei/bump-version": "^1.5.10",
    "@innei/eslint-config-ts": "^0.11.1",
    "@innei/prettier": "^0.11.1",
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.6",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.90",
    "@types/bcrypt": "5.0.0",
    "@types/cache-manager": "4.0.3",
    "@types/lodash": "4.14.199",
    "@types/node": "20.7.0",
    "@types/passport-jwt": "3.0.10",
    "@types/supertest": "2.0.13",
    "@types/ua-parser-js": "0.7.37",
    "@vercel/ncc": "0.38.0",
    "cross-env": "7.0.3",
    "eslint": "^8.50.0",
    "husky": "8.0.3",
    "ioredis": "^5.3.2",
    "lint-staged": "15.1.0",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "rollup-plugin-swc": "0.2.1",
    "source-map-support": "*",
    "ts-loader": "9.4.4",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2",
    "unplugin-swc": "1.4.2",
    "vite": "4.4.9",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.5",
    "zx": "7.2.3"
  },
  "optionalDependencies": {
    "mongodb-memory-server": "8.15.1",
    "redis-memory-server": "0.7.0"
  },
  "resolutions": {
    "pino": "./external/pino",
    "typescript": "^5.1.6"
  },
  "redisMemoryServer": {
    "downloadDir": "./tmp/redis/binaries",
    "version": "6.0.10",
    "disablePostinstall": "1",
    "systemBinary": "/opt/homebrew/bin/redis-server"
  }
}